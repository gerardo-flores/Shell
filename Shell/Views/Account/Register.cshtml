
@{
    ViewBag.Title = "Register";
}

<h2>Create a New Account</h2>
<p>
    Use the form below to create a new account. 
</p>
<p>
    Passwords are required to be a minimum of 6 characters in length.
</p>

<script src="@Url.Content("~/Public/javascripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Public/javascripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @ViewBag.Message;
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                Email Address
            </div>
            <div class="editor-field">
                @Html.TextBox("Email")
            </div>

            <div class="editor-label">
                Password
            </div>
            <div class="editor-field">
                @Html.Password("Password")
            </div>

            <div class="editor-label">
                Password Confirmation
            </div>
            <div class="editor-field">
                @Html.Password("Confirmation")
            </div>
            <p>
                <input type="submit" value="Register" />
            </p>
        </fieldset>
    </div>
}
